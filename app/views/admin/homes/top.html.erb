<div class= "row" >
  <div class= "container">
<h2>注文履歴一覧</h2>

<table class= "table">
  <tr>
    <th>購入日時</th>
    <th>購入者</th>
    <th>封筒</th>
    <th>便箋</th>
    <th>フォント</th>
    <th>手紙の内容</th>
  </tr>
  <% @orders.each do |order| %>
  <tr>
  <th><%= order.created_at.strftime("%Y/%m/%d") %></th>
  <th><%= order.customer.last_name %><%= order.customer.first_name %></th>
  <th><%= order.item.envelope.name %></th>
  <th><%= order.item.paper.name %></th>
  <th><%= order.item.font.name %></th>
  <th><%= link_to "詳細を見る",admin_order_path(order.id) %></th>
  </tr>
  <% end %>
</table>
</div>
</div>

