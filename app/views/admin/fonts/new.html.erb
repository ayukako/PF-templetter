<h2>フォント新規登録</h2>

  <% if @font.errors.any? %>
    <%= @font.errors.count %>errors prohibited this obj from being saved:
    <ul>
      <% @font.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @font, url: admin_fonts_path do |f| %>
    <h4>フォント画像</h4>
    <%= f.file_field :image, accept: "image/*" %>
